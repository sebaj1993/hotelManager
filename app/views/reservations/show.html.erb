<div class="row align-items-center justify-content-between my-4">
  <div class="col-3">
      <h5 class="mb-0">Reservation detail</h5>
  </div>
  <div class="col-9 text-end">
    <%= link_to 'Edit', edit_reservation_path(@reservation), class: 'btn btn-primary' %>
    <%= button_to 'Delete', reservation_path(@reservation), method: :delete, onclick: "return confirm('Are you sure you want to delete this reservation?')", class: 'btn btn-danger', form_class: 'd-inline' %>
  </div>
</div>
<div class="card">
    <div class="card-body">
      <dl>
        <dt>Hotel name</dt>
        <dd><%= @reservation.hotel_name %></dd>
        <dt>Price</dt>
        <dd>$<%= @reservation.price %></dd>
        <dt>Currency</dt>
        <dd><%= @reservation.currency %></dd>
        <dt>Entry date</dt>
        <dd><%= @reservation.entry_date %></dd>
        <dt>Departure date</dt>
        <dd><%= @reservation.departure_date %></dd>
        <dt>Guest name</dt>
        <dd><%= @reservation.guest_name %></dd>
        <dt>Guest email</dt>
        <dd><%= @reservation.guest_email %></dd>
      </dl>
    </div>
</div>
<div class="row mt-4">
  <div class="col">
    <%= link_to 'Back to the list', reservations_path %>
  </div>
</div>
